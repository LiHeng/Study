<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffff00"/>

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffff"
            android:layout_marginTop="8dp"/>

        <com.liheng.study.view.CircleImageView
            android:id="@+id/pic3"
            android:src="@mipmap/example"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:border_color="@android:color/darker_gray"
            app:border_width="4dp"
            app:border_overlay="false"
            />

        <com.liheng.study.view.CircleTextImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:border_color="@android:color/background_dark"
            app:border_width="2dp"
            android:layout_gravity="center"
            app:citv_text_text="照片"
            app:citv_text_size="32sp"
            app:citv_text_padding="35dp"
            app:citv_text_color="@android:color/white"
            app:fill_color="#50555D"
            />

        <com.liheng.study.view.PushSlideSwitch
            android:id="@+id/pushSlideSwitch"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:enabled="true"/>

        </LinearLayout>



    </ScrollView>


</RelativeLayout>
