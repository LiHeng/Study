<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="border_overlay" format="boolean"></attr>
        <attr name="fill_color" format="color"></attr>
    </declare-styleable>
    
    <declare-styleable name="CircleTextImageView">
        <attr name="citv_text_size" format="dimension"/>
        <attr name="citv_text_text" format="string"/>
        <attr name="citv_text_padding" format="dimension"/>
        <attr name="citv_text_color" format="color"/>
    </declare-styleable>
</resources>